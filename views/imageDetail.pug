        h1.text-center.display-4#headLineText Image Detail
        .container
            .row.justify-content-center
                hr.col-10.col-sm-11.col-lg-12
        .container.pt-2
            .row.justify-content-center
                img.img-fluid.mx-auto(src=`\\images\\${imageName}` alt="Card image cap" style="max-height:700px")
            form(method="post" encType="multipart/form-data" action=`/gallery/${imageName}`)
                div.row.m-2
                    input.btn.btn-success.mx-auto(type="submit" value="Show next on frame")
            form(method="post" encType="multipart/form-data" action=`/gallery/delete/thnl-${imageName}`)
                div.row.m-2
                    input.btn.btn-danger.mx-auto(type="submit" value="Delete")
           
        



